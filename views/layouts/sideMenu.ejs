<div class="d-flex min-vh-100">
    <ul class="nav bg-light" id="sideMenu">
        <div class=" col align-top p-4">
            <input type="text" placeholder="Name..." class="w-100" id="nomSite" onkeyup="myFunction()">

            <% sitesPl.forEach( function (sitePl) { %>
            <div class="row">
                <div class="col">
                    <li class="nav-item">
                        <a class="nav-link" href="/carriere/<%= sitePl.nomSitePl %>"> <%= sitePl.nomSitePl %></a>
                    </li>
                </div>


                <% if(droits == 2) { %>
                    <div class="col">
                        <a class="nav-link text-danger" href="/admin/modifierSite/<%= sitePl.nomSitePl %>"> GÃ©rer</a>
                    </div>
                <% } %>

                <% if(droits == 1 || droits == 2) { %>
                    <div class="col">
                        <form method="POST" action="/profil/addToVisit/<%= sitePl.nomSitePl %>">
                            <button class="btn btn-outline-light text-success" type="submit"> + </button>
                        </form>
                    </div>
                <% }%>
            </div>
            <% });%>
        </div>

        <script>
            function myFunction() {
                // Declare variables
                var input, filter, ul, li, a, i, txtValue, button;
                input = document.getElementById('nomSite');
                filter = input.value.toUpperCase();
                ul = document.getElementById("sideMenu");
                li = ul.getElementsByTagName('li');
                button = ul.getElementsByTagName('button');

                // Loop through all list items, and hide those who don't match the search query
                for (i = 0; i < li.length; i++) {
                    a = li[i].getElementsByTagName("a")[0];
                    //b = li[i].getElementsByTagName("button")[0];
                    txtValue = a.textContent || a.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        li[i].style.display = "";
                        button[i].style.display = "";
                    } else {
                        li[i].style.display = "none";
                        button[i].style.display = "none";
                    }
                }
            }
        </script>

    </ul>
