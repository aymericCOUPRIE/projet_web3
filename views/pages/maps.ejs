<div class="container align-content-center">
    <div id="map" style="height: 50em">
        <script>
            var map = L.map('map').setView([46.85, 2.3518], 6);
            L.tileLayer('https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token={accessToken}', {
                attribution: ' <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, <a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
                maxZoom: 18,
                id: 'mapbox/streets-v11',
                tileSize: 512,
                zoomOffset: -1,
                accessToken: 'pk.eyJ1IjoiYXltZXJpY2NvdXByaWUiLCJhIjoiY2s3ODRvODRjMGJ4dTNsbnlzcDY1bG53ayJ9.zqdG6Rq16dnZuwFHpBbIew'
            }).addTo(map);

            <% coords.forEach( function (coord) { %>
                var marker = L.marker([<%= coord.longitude %>, <%= coord.latitude %>]).addTo(map);
            <% });%>

        </script>
    </div>
</div>

